<h1>Editing post</h1>
<%= form_for @post do |f| %>

 <% if @post.errors.any? %>
   <h2>Errors:</h2>
 <ul>
 <% @post.errors.full_messages.each do |message| %>
   <li><%= message %></li>
 <% end %>
 </ul>
<% end %>

<p>
  <%= f.label :title %><br />
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :text %><br />
  <%= f.text_field :text %>
</p>
<p>
  <%= f.label :image %><br>
  <%= f.file_field :image %>
</p>
<p>
  <%= f.submit "Update" %>
</p>

<%= link_to 'Show', @post %> |
<%= link_to 'Back', posts_path %>
<% end %>
